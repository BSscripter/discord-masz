{% extends 'base.html.twig' %}
{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container">
        <span class="display-4 mb-3">Guilds ({{ guilds|length }})</span>

        <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
            {% for guild in guilds %}
                <a href="/modcases/{{ guild.obj.id }}" class="mb-3">
                    <div class="card">
                        <div class="card-body d-flex flex-row">
                            <div class="flex-grow-1">
                                <!-- Title -->
                                <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                <!-- Text -->
                                <div class="card-text">
                                    <p>#{{ guild.obj.id }}</p>
                                    <p class="font-weight-bold">Cases: {{ guild.stats.modcase_count }}</p>
                                </div>
                            </div>
                            <div class="align-self-end">
                                <img class="card-img"
                                     src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                     alt="Guild icon"/>
                            </div>
                        </div>
                        <div class="card-text">
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock body %}
