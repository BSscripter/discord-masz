{% extends 'base.html.twig' %}
{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container">
        <div class="modal fade" id="popupDeleteGuild" tabindex="-1" role="dialog" aria-labelledby="popupDeleteGuildLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title w-100" id="popupDeleteGuildLabel">Delete this guild?</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="popupBody">
                        <div id="deleteCaseForm">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="deleteCases">
                                        <label class="custom-control-label" for="deleteCases">Delete all cases?</label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger btn-md" onclick="deleteGuild(this)">
                                DELETE GUILD
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if basic_data.loggedInUser|default %}
            {% if basic_data.loggedInUser.isAdmin %}
                <!-- Buttons -->
                <div class="d-flex align-items-center">
                    <a type="button" class="btn btn-primary" href="/newguild">Register a new guild</a>
                </div>
            {% endif %}
        {% endif %}
        {% if not mod_guilds|default and not member_guilds|default and not banned_guilds|default %}
            <div class="card rounded">
                <div class="card-body">
                    <h4 class="card-title"><a>Nothing here.</a></h4>
                    <p class="card-text">There are no guilds registered that you are a member of. <br/>
                        If you look for a guild you are banned from, the administrator might have to enable the banned feature first.</p>
                </div>
            </div>
        {% endif %}
        {% if mod_guilds|default %}
            <span class="display-4 mb-3">Moderator Guilds ({{ mod_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in mod_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if member_guilds|default %}
            {% if mod_guilds|default %}
                <hr/>
            {% endif %}
            <span class="display-4 mb-3">Guilds ({{ member_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in member_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if banned_guilds|default %}
            {% if mod_guilds|default or member_guilds|default %}
                <hr/>
            {% endif %}
            <span class="display-4 mb-3">Banned from Guilds ({{ banned_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in banned_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false" id="notification" style="min-width:100%">
            <div class="toast-header">
                <svg class=" rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg"
                     preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                    <rect fill="#007aff" width="100%" height="100%" id="notificationColor" /></svg>
                <strong class="mr-auto" id="notificationTitle">Post comment</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="notificationBody">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>
{% endblock body %}

{% block scriptblock %}
<script>
    var selectedGuild;

    function updateGuild(button) {
        let elementId = $(button).attr('id');
        let guildid = elementId.slice(elementId.lastIndexOf('-') + 1);
        location.href = '/' + guildid + '/edit';
    }

    function deleteGuildButton(button) {
        let elementId = $(button).attr('id');
        selectedGuild = elementId.slice(elementId.lastIndexOf('-') + 1);

        $('#popupBody > .card').remove();  // clear
        let guildCard = $('#guild-card-' + selectedGuild).clone();
        $('#popupBody').prepend(guildCard);
    }

    function deleteGuild(button) {
        let deleteCases = $('#deleteCases').is(":checked").toString();
        $.ajax({
            type: "DELETE",
            url: "/api/v1/guilds/" + selectedGuild + '?deleteCases=' + deleteCases,
            success: function (data) {
                location.reload();
            },
            error: function (errMsg) {
                console.log(errMsg);
                $('#notification').insertAfter($(button));
                $('#notificationColor').attr('fill', '#ac000f');
                $('#notificationTitle').text('Deleting guild failed');
                $('#notificationBody').text(errMsg.status + ': ' + errMsg.responseText);
                $('#notification').toast('show');
            }
        });
        console.log(selectedGuild);
    }
</script>
{% endblock scriptblock %}
