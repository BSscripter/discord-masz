{% extends 'base.html.twig' %}
{% block body %}
    {% include 'navbar.html.twig' %}

    <style>
        #suggestions > div {
            margin: 8px;
            width: 15rem;
        }
        #suggestions .card-img-top {
            width: 100%;
            height: 10vw;
            object-fit: cover;
        }
    </style>

    <div class="container">
        <div class="modal fade" id="popupDeleteGuild" tabindex="-1" role="dialog" aria-labelledby="popupDeleteGuildLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title w-100" id="popupDeleteGuildLabel">Delete this guild?</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="popupBody">
                        <div id="deleteGuildForm">
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="deleteData">
                                        <label class="custom-control-label" for="deleteData">Delete all cases and files?</label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger btn-md" onclick="deleteGuild(this)">
                                DELETE GUILD
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if basic_data.loggedInUser|default %}
            <div class="d-flex p-2 justify-content-center flex-wrap" id="suggestions" style="display: none!important">
                {% if basic_data.loggedInUser.isAdmin %}
                <div class="card">
                    <div class="view overlay">
                        <img class="card-img-top" src="{{ asset('img/rocket.png') }}"
                             alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">First steps</h5>
                        <p class="card-text">
                            First you have to <span class="font-weight-bold">register your guilds in this application</span>. You will be asked to add the bot to your guild if you have not already done so.<br/>
                            After registering the guild you can <span class="font-weight-bold">create cases</span>, your users can <span class="font-weight-bold">see their own cases and comment on them</span> and your <span class="font-weight-bold">moderators can keep track</span> of everything.
                        </p>
                    </div>
                </div>
                {% endif %}
                <div class="card">
                    <div class="view overlay">
                        <img class="card-img-top" src="{{ asset('img/feature.png') }}"
                             alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Nice to know</h5>
                        <p class="card-text">
                            Checkout the top right corner for <span class="font-weight-bold">settings</span> and <span class="font-weight-bold">patch information.</span><br/>
                            {% if basic_data.loggedInUser.isAdmin %}
                                There are <span class="font-weight-bold">additional features</span> in this application that may require you to give your bots more permissions.
                                Checkout the <a href="https://github.com/zaanposni/discord-masz#unban-request-feature" target="_blank">documentation</a>.
                            {% endif %}
                        </p>
                    </div>
                </div>
                <div class="card">
                    <div class="view overlay">
                        <img class="card-img-top" src="{{ asset('img/github.png') }}"
                             alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Support</h5>
                        <p class="card-text">
                            If you enjoy MASZ please <span class="font-weight-bold">star our project on GitHub</span> and <span class="font-weight-bold">tell your friends</span> about MASZ.
                        </p>
                        <!-- Button -->
                        <a href="https://github.com/zaanposni/discord-masz" type="button" class="btn btn-purple" target="_blank">
                            <i class="fab fa-github" aria-hidden="true"></i> GitHub
                        </a>
                    </div>
                </div>
                <div class="d-flex flex-column" style="width: unset">
                    <button type="button" class="btn btn-warning" onclick="hideSuggestions()">
                        Hide suggestions
                    </button>
                    <div class="flex-grow-1"></div>
                </div>
            </div>
            {% if basic_data.loggedInUser.isAdmin %}
                <!-- Buttons -->
                <div class="d-flex justify-content-center">
                    <a type="button" class="btn btn-primary" href="/newguild">Register a new guild</a>
                </div>
            {% endif %}
        {% endif %}
        {% if not mod_guilds|default and not member_guilds|default and not banned_guilds|default %}
            <div class="card rounded">
                <div class="card-body">
                    <h4 class="card-title"><a>Nothing here.</a></h4>
                    <p class="card-text">There are no guilds registered that you are a member of. <br/>
                        If you look for a guild you are banned from, the administrator might have to enable the banned feature first.</p>
                </div>
            </div>
        {% endif %}
        {% if mod_guilds|default %}
            <span class="display-4 mb-3">Moderator Guilds ({{ mod_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in mod_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if member_guilds|default %}
            {% if mod_guilds|default %}
                <hr/>
            {% endif %}
            <span class="display-4 mb-3">Guilds ({{ member_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in member_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if banned_guilds|default %}
            {% if mod_guilds|default or member_guilds|default %}
                <hr/>
            {% endif %}
            <span class="display-4 mb-3">Banned from Guilds ({{ banned_guilds|length }})</span>
            <div class="d-flex flex-column flex-wrap justify-content-between mt-3">
                {% for guild in banned_guilds %}
                    <div class="d-flex flex-row">
                        <a href="/modcases/{{ guild.obj.id }}" class="mb-3 flex-grow-1">
                            <div class="card" id="guild-card-{{ guild.obj.id }}">
                                <div class="card-body d-flex flex-row">
                                    <div class="flex-grow-1">
                                        <!-- Title -->
                                        <h4 class="card-title"> {{ guild.obj.name }} </h4>

                                        <!-- Text -->
                                        <div class="card-text">
                                            <p>#{{ guild.obj.id }}</p>
                                            <p class="font-weight-bold">
                                                Cases: {{ guild.stats.modCaseCount }} <br/>
                                                Active punishments: {{ guild.stats.activePunishments }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <img class="card-img"
                                             src="https://cdn.discordapp.com/icons/{{ guild.obj.id }}/{{ guild.obj.icon }}.png"
                                             alt="Guild icon"/>
                                    </div>
                                </div>
                                <div class="card-text">
                                </div>
                            </div>
                        </a>
                        {% if basic_data.loggedInUser.isAdmin %}
                            <div class="d-flex flex-column">
                                <button class="btn btn-danger" id="delete-{{ guild.obj.id }}" onclick="deleteGuildButton(this)"
                                        data-toggle="modal" data-target="#popupDeleteGuild">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <button class="btn btn-warning" id="update-{{ guild.obj.id }}" onclick="updateGuild(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false" id="notification" style="min-width:100%">
            <div class="toast-header">
                <svg class=" rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg"
                     preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                    <rect fill="#007aff" width="100%" height="100%" id="notificationColor" /></svg>
                <strong class="mr-auto" id="notificationTitle">Post comment</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="notificationBody">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>
{% endblock body %}

{% block scriptblock %}
<script>
    function readCookie(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for(var i=0;i < ca.length;i++) {
            var c = ca[i];
            while (c.charAt(0)==' ') c = c.substring(1,c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
        }
        return null;
    }

    function setCookie(name,value,days) {
        var expires = "";
        if (days) {
            var date = new Date();
            date.setTime(date.getTime() + (days*24*60*60*1000));
            expires = "; expires=" + date.toUTCString();
        }
        document.cookie = name + "=" + (value || "")  + expires + "; path=/";
    }

    function hideSuggestions() {
        $('#suggestions').attr("style", "display: none!important");
        setCookie('suggestions', 'false', 99999);
        $('#suggestionToggle').prop('checked', true);
    }

    $(document).ready(function () {
        let suggestions = readCookie('suggestions');
        if (suggestions === 'true' || suggestions === null) {  // default show
            $('#suggestions').attr("style", "display: block");
        } else {
            $('#suggestions').attr("style", "display: none!important");
        }
    });

    var selectedGuild;

    function updateGuild(button) {
        let elementId = $(button).attr('id');
        let guildid = elementId.slice(elementId.lastIndexOf('-') + 1);
        location.href = '/' + guildid + '/edit';
    }

    function deleteGuildButton(button) {
        let elementId = $(button).attr('id');
        selectedGuild = elementId.slice(elementId.lastIndexOf('-') + 1);

        $('#deleteGuildForm > .card').remove();  // clear
        let guildCard = $('#guild-card-' + selectedGuild).clone();
        $('#deleteGuildForm').prepend(guildCard);
    }

    function deleteGuild(button) {
        let deleteData = $('#deleteData').is(":checked").toString();
        $.ajax({
            type: "DELETE",
            url: "/api/v1/guilds/" + selectedGuild + '?deleteData=' + deleteData,
            success: function (data) {
                location.reload();
            },
            error: function (errMsg) {
                console.log(errMsg);
                $('#notification').insertAfter($(button));
                $('#notificationColor').attr('fill', '#ac000f');
                $('#notificationTitle').text('Deleting guild failed');
                $('#notificationBody').text(errMsg.status + ': ' + errMsg.responseText);
                $('#notification').toast('show');
            }
        });
        console.log(selectedGuild);
    }
</script>
{% endblock scriptblock %}
