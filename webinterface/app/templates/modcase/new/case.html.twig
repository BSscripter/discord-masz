{% extends 'base.html.twig' %}
{% block body %}
    {% include 'navbar.html.twig' %}

    <style>
        .hiddencolumn {
            display: none;
        }
    </style>

    <div class="container">
        <div class="d-flex justify-content-between align-items-start">
            <h3><span class="badge badge-danger">New ModCase</span></h3>
        </div>
        <br>


        {{ form_start(createCaseForm) }}

        <div class="d-flex flex-wrap">
            <div class="md-form flex-grow-1">
                {{ form_label(createCaseForm.userid) }}
                {{ form_widget(createCaseForm.userid) }}
            </div>
            <div class="md-form flex-grow-1">
                {{ form_label(createCaseForm.guildid) }}
                {{ form_widget(createCaseForm.guildid, {'attr': {'placeholder': guildid }}) }}
            </div>
        </div>
        <div class="d-flex flex-wrap">
            <div class="md-form flex-grow-1">
                {{ form_row(createCaseForm.occuredAt, {'attr': {'placeholder': now }}) }}
            </div>
            <div class="md-form flex-grow-1">
                {{ form_row(createCaseForm.severity, {'attr': {'placeholder': '0' }}) }}
            </div>
        </div>
        <div class="md-form">
            {{ form_row(createCaseForm.label) }}
        </div>
        <div class="md-form">
            {{ form_row(createCaseForm.title) }}
        </div>
        <div class="md-form">
            {{ form_row(createCaseForm.description) }}
            <small class="form-text text-muted">
                Please describe the case as detailed as possible. You can also add links for proofs in this field.
            </small>
        </div>
        <div class="md-form">
            {{ form_row(createCaseForm.punishment) }}
        </div>
        <div class="md-form">
            {{ form_row(createCaseForm.sendNotification) }}
        </div>

        {{ form_end(createCaseForm) }}

    </div>
{% endblock body %}

{% block scriptblock %}

    <script>
        $(document).ready(function () {

            $('#dtBasicExample').DataTable();
        });
    </script>
{% endblock %}
